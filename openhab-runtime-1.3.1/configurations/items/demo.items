Group All

Group GF_Class	"SmartClass" 	<office> 	(All)

/* active groups */
Group:Switch:OR(ON, OFF) 		Lights 		"LEDs [(%d)]" 								(All)
Group:Switch:OR(ON, OFF) 		Shutters 		"Volets [(%d)]" 						(All)


Switch Professor_Presence "Présence du professeur" (GF_Class)
Switch Mouvement_Detector "Présence de personnes" (GF_Class)

Number Luminosity "Luminosity [%d %%]" (GF_Class)

Switch Automatic_Luminosity "Automatic Luminosity" (GF_Class)
Dimmer White_Light "Room Light [%d %%]" (GF_Class, Lights) 
/* Lights */


Dimmer Light_Front 	"Front [%d %%]" 	(GF_Class, Lights)
Dimmer Light_Back 	"Back [%d %%]"	(GF_Class, Lights)

Color Color_Light_Front 	"Color Front"	(GF_Class, Lights)

/* Rollershutters */
Switch Shutter_all (Shutters)

Switch Shutter_Front 		"Shutter Front "		(GF_Class, Shutters)
Switch Shutter_Back 		"Shutter Back "		(GF_Class, Shutters)


/* NTP binding demo item */
DateTime		Date			"Date [%1$tA, %1$td.%1$tm.%1$tY]"	<calendar>	{ ntp="Europe/Paris:fr_FR" }

Number Scene_General			"Scene"					<sofa>


/* Arduino items */

Switch Light_Arduino "Arduino" (GF_Class) 

String ArduinoController "ArduinoController[%s]" (GF_Class) 
String ArduinoControllerRGB "ArduinoControllerRGB [%s] " (GF_Class) {serial="/dev/ttyACM0"} 
String ArduinoControllerLUM "ArduinoControllerLUM [%s] " (GF_Class) {serial="/dev/ttyACM1"} 
String ArduinoControllerMOTOR "ArduinoControllerMOTOR [%s] " (GF_Class) {serial="/dev/ttyACM2"}


